#!/bin/bash

PID_FILE=<%= node['logstash']['pid_file'] %>
if [ -f $PID_FILE ] ; then
 PID=`cat $PID_FILE`
 kill -0 $PID 2>&1 > /dev/null
 if [ $? -eq 0 ] ; then
     echo "A logstash server is already running. Kill it first."
     exit 1
 fi
fi

nohup <%= node['logstash']['base_dir'] %>/bin/logstash -f <%= node['logstash']['base_dir'] %>/config/spark-streaming.conf -l <%= node['logstash']['base_dir'] %>/log/logstash-spark-streaming.log 2>&1 > /dev/null &
echo $! > $PID_FILE
