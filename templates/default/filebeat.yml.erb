filebeat.inputs:

- type: log
  # Paths that should be crawled and fetched. Glob based paths.
  paths:
   - <%= @paths %>
  <% if @multiline %>
  multiline:
    pattern: '[0-9]{4}-[0-9]{2}-[0-9]{2}'
    negate: true
    match: after
  <% end -%>


output:
  logstash:
    hosts: ["<%= @logstash_endpoint %>"]

logging.files:
    path: <%= node['filebeat']['base_dir'] %>/log/
    name: <%= @log_name %>
    keepfiles: 7
    permissions: 0644

path.data: <%= node['filebeat']['base_dir'] %>/data/<%= @log_name %>
