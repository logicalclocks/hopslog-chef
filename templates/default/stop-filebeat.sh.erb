#!/bin/bash

PID_FILE=<%= node['filebeat']['pid_file'] %>

function kill_named {
    PID=`ps aux | grep -i filebeat | grep -v bash | grep -v chef | grep -v grep | awk '{print $2}'`
    if [ "$PID" != "" ] ; then
	kill -9 $PID > /dev/null 2>&1
        res=$?
    else
	res=$NOT_FOUND
    fi
    return $res
}


res=1
if [ -f $PID_FILE ] ; then
 PID=`cat $PID_FILE`
 kill $PID > /dev/null 2>&1
 res=$?
fi


if [ $res -ne 0 ] ; then
    kill_named
else
    wait_pid_removed=2
    timeout=0
    while [ $timeout -lt $wait_pid_removed ] ; do
	sleep 1
	kill -0 $PID > /dev/null 2>&1 
        if [ $? -ne 0 ] ; then 
          break
        fi
	echo -n "."
	timeout=`expr $timeout + 1`
    done
    echo ""

    if [ $timeout -eq $wait_pid_removed ] ; then
	kill_named
    fi
fi

if [ $res -eq 0 ] ; then
 echo "Killed filebeat"
elif [[ $res -eq $NOT_FOUND ]] ; then
    echo "Could not find filebeat process to kill"
fi


exit $res


