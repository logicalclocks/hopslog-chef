#!/bin/bash

PID_FILE=<%= node['kibana']['pid_file'] %>
if [ -f $PID_FILE ] ; then
 PID=`cat $PID_FILE`
 kill -0 $PID 2>&1 > /dev/null
 if [ $? -eq 0 ] ; then
     echo "A Kibana server is already running. Kill it first."
     exit 1
 fi
fi


nohup <%= node['kibana']['base_dir'] %>/bin/kibana 2>&1 > <%= node['kibana']['base_dir'] %>/log/kibana.log &
echo $! > $PID_FILE
