input {
beats {
port => <%= node['logstash']['beats']['rstudio_port'] %>
}
}

filter {

grok {
match => {"message" => "%{GREEDYDATA:log_message}"}
}

#Ignore failed parse enties. Grok filter has been tested with http://grokconstructor.appspot.com
if "_grokparsefailure" in [tags] {
drop { }
}

# For backwards compatibility with filebeat v6.x, we need to pick the correct field
mutate {
add_field => [ "filepath", "" ]
}

if [log][file][path] {
mutate {
replace => [ "filepath", "%{[log][file][path]}"]
}
} else if [source] {
mutate {
replace => [ "filepath", "%{[source]}"]
}
}

mutate {
replace => [ "project", "%{[rstudioinfo][0]}"]
}

grok {
match => { "filepath" => ".+logs/(%{GREEDYDATA:rstudioinfo}).log" }
}

mutate {
add_field => [ "project", "" ]
}
mutate {
add_field => [ "jobname", "rstudioserver" ]
}
mutate {
add_field => [ "application", "" ]
}

mutate {
split => ["rstudioinfo", "__"]
}

mutate {
replace => [ "project", "%{[rstudioinfo][0]}"]
}

mutate {
add_field => [ "userinfo", "%{[rstudioinfo][1]}" ]
}

mutate {
split => ["userinfo", "-"]
}

mutate {
replace => [ "application", "%{[userinfo][0]}"]
}

mutate {
remove_field => ["fields", "source", "log", "ecs", "message", "agent", "prospector", "beat", "tags", "rstudioinfo",
"host"]
}
}


output {
elasticsearch {
hosts => [<%= @elastic_addr %>]
index => "%{project}_rstudio_logs-%{+YYYY.MM.dd}"
<% if node['elastic']['opendistro_security']['enabled'] %>
  user => "<%=node['elastic']['opendistro_security']['logstash']['username']%>"
  password => "<%=node['elastic']['opendistro_security']['logstash']['password']%>"
  <% if node['elastic']['opendistro_security']['https']['enabled'] %>
    cacert => "<%= @hops_ca %>"
    ssl => true
    ilm_enabled => false
  <% end %>
<% end %>
}
}

